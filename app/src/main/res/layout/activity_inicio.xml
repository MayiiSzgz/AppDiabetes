<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".InicioActivity">



    <TextView
        android:id="@+id/nombre"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Nombre" />



    <Button
        android:id="@+id/gluc"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="24dp"
        android:text="Registro Glucemia"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gluc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="Historial" />

    <Button
        android:id="@+id/registro_medicamentos"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/historial"
        android:layout_marginTop="16dp"
        android:text="Registro de Medicamentos"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/ver_medicamentos"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registro_medicamentos"
        android:layout_marginTop="16dp"
        android:text="Ver Medicamentos"
        android:layout_centerHorizontal="true" />



    <Button
        android:id="@+id/perfil"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ver_medicamentos"
        android:layout_marginTop="16dp"
        android:text="Perfil"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
