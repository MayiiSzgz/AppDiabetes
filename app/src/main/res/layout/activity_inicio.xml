<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".InicioActivity">

    <ImageView
        android:id="@+id/perfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <LinearLayout
        android:id="@+id/linearNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hola"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/perfil"
            android:text="Hola " />
        <TextView
            android:id="@+id/nombre"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/perfil"
            android:text="Nombre" />

    </LinearLayout>

    <ImageView
        android:id="@+id/gluc"
        android:background="@drawable/button_background"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linearNombre"
        android:layout_marginTop="24dp"
        android:src="@drawable/glucosa"
        android:layout_centerHorizontal="true" />




    <ImageView
        android:id="@+id/registro_medicamentos"
        android:background="@drawable/button_background"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/gluc"
        android:layout_marginTop="16dp"
        android:src="@drawable/medicamentos"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
